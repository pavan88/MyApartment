<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">


    <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"/>

    <ScrollView android:layout_width="match_parent" android:id="@+id/linearlayout" android:scrollbars="vertical"
                android:layout_height="wrap_content" android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_marginTop="216dp" android:layout_alignParentStart="true">
        <TableLayout android:id="@+id/tablelayout" android:layout_gravity="center"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginVertical="30dp"
                     android:layout_marginHorizontal="10dp"
                     android:background="#f1f1f1">

            <TableRow android:id="@+id/tablerow" android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
                          android:textColor="#0000ff"
                          android:layout_weight="1" android:text="Date"/>

                <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
                          android:textColor="#00bfff"
                          android:layout_weight="1" android:text="Flat"/>

                <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
                          android:textColor="#1e90ff"
                          android:layout_weight="1" android:text="Amount"/>


                <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
                          android:textColor="#87ceeb"
                          android:layout_weight="1" android:text="Area"/>
            </TableRow>
        </TableLayout>
    </ScrollView>


</RelativeLayout>